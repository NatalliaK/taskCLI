{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "airbnb/base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "linebreak-style": 0,
        "no-use-before-define": ["error", { "functions": false }],
        "comma-dangle": ["error", "never"],
        "no-console": ["error", { "allow": ["log", "error"] }],
        "arrow-parens": ["error", "as-needed"],
        "consistent-return": "off",
        "prefer-destructuring": "off"
    }
}